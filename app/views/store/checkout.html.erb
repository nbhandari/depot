<div class="depot-form">
<%= error_messages_for 'order' %>
<fieldset>
<legend><%= I18n.t('order.title') %></legend>
<% form_for :order, :url => { :action => :save_order } do |form| %>
<p>
<%= label :order, :name, I18n.t('order.name') || "Name"%>
<%= form.text_field :name, :size => 40 %>
</p>
<p>
<%= label :order, :address, I18n.t('order.address') %>
<%= form.text_area :address, :rows => 3, :cols => 40 %>
</p>
<p>
<%= label :order, :email, I18n.t('order.email') %>
<%= form.text_field :email, :size => 40 %>
</p>
<p>
<%= label :order, :pay_type, I18n.t('order.paytype.label') %>
<%=
form.select :pay_type,
Order::PAYMENT_TYPES,
:prompt => I18n.t('order.prompt')
%>
</p>
<%= submit_tag "Place Order" , :class => "submit" %>
<% end %>
</fieldset>
</div>