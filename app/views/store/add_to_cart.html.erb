<div class="cart-title"><%= I18n.t('cart.title') %></div>
  <table>
    <% for cart_item in @cart.items %>
      <tr>
        <td><%= cart_item.quantity %>&times;</td>
        <td><%= h(cart_item.title) %></td>
        <td class="item-price"><%= number_to_currency(cart_item.price/100.0) %></td>
      </tr>
    <% end %>
    
    <tr class="total-line">
      <td colspan="2">Total</td>
      <td class="total-cell"><%= number_to_currency(@cart.total_price/100.0) %></td>
    </tr>
  </table>

<%= button_to I18n.t('buttons.chkout') , :action => :checkout %>
<%= button_to I18n.t('buttons.empty_cart') , :action => :empty_cart %>