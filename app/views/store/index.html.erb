<h1><%= I18n.t(:'store.title') %></h1>

<% for product in @products -%>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%=h product.title %></h3>
    <%= product.description %>
    <span class="price"><%= sprintf("%01.2f", product.price / 100.0) %></span>
    <%= button_to I18n.t('buttons.add_to_cart') , :action => :add_to_cart, :id => product %>
  </div>
<% end %>