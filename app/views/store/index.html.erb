<h1>Store Products</h1>

<% for product in @products -%>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%=h product.title %></h3>
    <%= product.description %>
    <span class="price"><%= sprintf("%01.2f", product.price / 100.0) %></span>
    <%= button_to "Add to Cart" , :action => :add_to_cart, :id => product %>
  </div>
<% end %>